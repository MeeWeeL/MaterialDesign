<?xml version="1.0"?>
<resources>
    <style name="DefaultTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="chipStyle">@style/MyDefaultCheapStyle</item>
        <item name="floatingActionButtonStyle">@style/MyFABStyle</item>
        <item name="bottomAppBarStyle">@style/MyBABStyle</item>
        <item name="android:windowBackground">#EEFEFF</item>
    </style>
    <style name="BSS">
        <item name="android:background">#FFF0E2</item>
    </style>
    <style name="SecondTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="chipStyle">@style/MySecondDefaultCheapStyle</item>
        <item name="floatingActionButtonStyle">@style/MySecondFABStyle</item>
        <item name="bottomAppBarStyle">@style/MySecondBABStyle</item>
        <item name="android:windowBackground">#FFFDE7</item>
    </style>
    <style name="MyDefaultCheapStyle" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipIconEnabled">true</item>
        <item name="chipIcon">@drawable/ic_cloud</item>
        <item name="checkedIcon">@drawable/ic_cloud_done</item>
        <item name="chipIconVisible">false</item>
        <item name="checkedIconVisible">true</item>
        <item name="chipSurfaceColor">#BBDEFB</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">#4A148C</item>
        <item name="chipEndPadding">10dp</item>
        <item name="chipStartPadding">10dp</item>
    </style>
    <style name="MyFABStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">#BBDEFB</item>
    </style>
    <style name="MyBABStyle" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">#64B5F6</item>
    </style>
    <style name="MySecondDefaultCheapStyle" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipIconEnabled">true</item>
        <item name="chipIcon">@drawable/ic_cloud</item>
        <item name="checkedIcon">@drawable/ic_focus</item>
        <item name="chipIconVisible">false</item>
        <item name="checkedIconVisible">true</item>
        <item name="chipSurfaceColor">#FFD180</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">#4A148C</item>
        <item name="chipEndPadding">10dp</item>
        <item name="chipStartPadding">10dp</item>
    </style>
    <style name="MySecondFABStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">#FF6D00</item>
    </style>
    <style name="MySecondBABStyle" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">#FFAB40</item>
    </style>

    <style name="MotionPic">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>
    <style name="cardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">14dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">#616161</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>
</resources>